{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "lib": [
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "server.ts",
    "types/**/*",
    "Databases/**/*",
    "Middlewares/**/*",
    "Routers/**/*",
    "Services/**/*",
    "Utils/**/*"
  ]
}