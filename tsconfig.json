{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "baseUrl": ".",
        "paths": {
            "@utils/*": ["Utils/*"],
            "@models/*": ["Databases/Models/*"],
            "@services/*": ["Services/*"],
            "@config/*": ["config/*"],
            "@middlewares/*": ["Middlewares/*"],
            "@databases/*": ["Databases/*"],
            "@routers/*": ["Routers/*"],
            "@types/*": ["types/*"]
        },
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        "lib": [
            "ESNext"
        ],
        "strict": true,
        "esModuleInterop": true,
        "allowJs": true,
        "skipLibCheck": true,
        "noEmit": false,
        "outDir": "./dist",
        "rootDir": "./",
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "server.ts",
        "types/**/*",
        "Databases/**/*",
        "Middlewares/**/*",
        "Routers/**/*",
        "Services/**/*",
        "Utils/**/*"
    ]
}